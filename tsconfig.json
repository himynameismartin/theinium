{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "lib"]
}
